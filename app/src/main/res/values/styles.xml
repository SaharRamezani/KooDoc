<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- your shared card style -->
    <style name="Widget.KooDoc.MaterialCard"
        parent="Widget.MaterialComponents.CardView">
        <!-- uniform corner radius -->
        <item name="cardCornerRadius">16dp</item>
        <!-- uniform elevation -->
        <item name="cardElevation">6dp</item>
        <!-- inner compat padding so content never touches edges -->
        <item name="cardUseCompatPadding">true</item>
        <!-- use your themeâ€™s surface color for the background -->
        <item name="cardBackgroundColor">@color/surface_bg_deep</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="ShapeAppearanceOverlay.Kidzi.Dialog"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="DialogBlurTheme"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">

        <!-- keep your RTL and shape -->
        <item name="android:layoutDirection">rtl</item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearanceOverlay.Kidzi.Dialog
        </item>

        <!-- 1) Dialog background comes from your surface palette -->
        <item name="android:windowBackground">@color/surface_bg_default</item> :contentReference[oaicite:0]{index=0}

        <!-- 2) All title & message text will use your primary-on-surface color -->
        <item name="colorOnSurface">@color/colorTextPrimary</item> :contentReference[oaicite:1]{index=1}

    </style>

</resources>
