<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <!-- Top Action Buttons -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_account"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/button_primary_bg"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/outline_supervisor_account_24"
                    android:contentDescription="@string/account_main"
                    app:tint="@color/button_primary_text" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_kids"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_account"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/button_secondary_bg"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_kids_16"
                    android:contentDescription="@string/alert"
                    app:tint="@color/button_secondary_text" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kids"
                    android:textColor="@color/button_secondary_text" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/btn_account"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.33">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="400dp"
                android:layout_height="270dp"
                android:src="@drawable/logo_koo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/logo_main"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Main Action Cards -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_symptoms"
            style="@style/Widget.KooDoc.MaterialCard"
            android:layout_width="@dimen/card_size"
            android:layout_height="@dimen/card_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:contentDescription="@string/checkup"
                android:padding="@dimen/card_content_padding">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_symptoms_main"
                    android:contentDescription="@string/checkup_image"
                    app:tint="@color/surface_text_deep" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/symptoms_diag"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/surface_text_deep"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_calculator"
            style="@style/Widget.KooDoc.MaterialCard"
            android:layout_width="@dimen/card_size"
            android:layout_height="@dimen/card_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:contentDescription="@string/main_calculator"
                android:padding="@dimen/card_content_padding">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_calculator"
                    android:contentDescription="@string/main_calculator"
                    app:tint="@color/surface_text_deep" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_calculator"
                    android:gravity="center"
                    android:textAlignment="center"
                android:textColor="@color/surface_text_deep"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_food"
            style="@style/Widget.KooDoc.MaterialCard"
            android:layout_width="@dimen/card_size"
            android:layout_height="@dimen/card_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:contentDescription="@string/food_milk"
                android:padding="@dimen/card_content_padding">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_food_24"
                    android:contentDescription="@string/food_milk"
                    app:tint="@color/surface_text_deep" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food_milk"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/surface_text_deep"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_vaccine"
            style="@style/Widget.KooDoc.MaterialCard"
            android:layout_width="@dimen/card_size"
            android:layout_height="@dimen/card_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:contentDescription="@string/vaccine_main"
                android:padding="@dimen/card_content_padding">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_vaccines"
                    android:contentDescription="@string/vaccine_main"
                    app:tint="@color/surface_text_deep" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vaccine_main"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/surface_text_deep"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_alert"
            style="@style/Widget.KooDoc.MaterialCard"
            android:layout_width="@dimen/card_size"
            android:layout_height="@dimen/card_size">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:contentDescription="@string/alert"
                android:padding="@dimen/card_content_padding">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_alert_24"
                    android:contentDescription="@string/alert"
                    app:tint="@color/surface_text_deep" />

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Body2"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/alert_bad"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/surface_text_deep"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            app:layout_constraintTop_toBottomOf="@id/top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:flow_wrapMode="chain"
            app:flow_maxElementsWrap="3"
            app:flow_horizontalGap="16dp"
            app:flow_verticalGap="16dp"
            app:flow_horizontalAlign="center"
            app:flow_verticalAlign="center"
            app:constraint_referenced_ids="
            btn_symptoms,
            btn_calculator,
            btn_food,
            btn_vaccine,
            btn_alert"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
