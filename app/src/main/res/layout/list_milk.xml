<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        app:cardElevation="1dp"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardBackgroundColor="@color/surface_bg_deep"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:padding="@dimen/spacing_small">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Headline6"
                        android:id="@+id/persian_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نان ۱"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_xsmall"
                        android:text="("
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:id="@+id/en_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAN1"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_xsmall"
                        android:text=")"
                        android:textColor="?attr/colorOnSurface" />

                </LinearLayout>

            </LinearLayout>

            <!-- Compatibility Range -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comatible_with"
                        android:textColor="@color/colorTextMuted" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:id="@+id/txt_start"
                        android:layout_width="@dimen/compat_value_width"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/colorTextPrimary" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=" تا "
                        android:textColor="@color/colorTextMuted" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:id="@+id/txt_end"
                        android:layout_width="@dimen/compat_value_width"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="6"
                        android:textColor="@color/colorTextPrimary" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:id="@+id/txt_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_large"
                        android:gravity="center"
                        android:text="ماه"
                        android:textColor="@color/colorTextMuted" />

                </LinearLayout>

                <TextView
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:id="@+id/txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/spacing_medium"
                    android:text="رگولار"
                    android:textColor="@color/colorTextMuted" />

            </LinearLayout>

            <!-- Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/spacing_medium">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="لاکتوز: "
                        android:textColor="@color/colorTextPrimary" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:id="@+id/txt_lact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:text="دارد"
                        android:textColor="@color/colorTextMuted" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layoutDirection="rtl">

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Body2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="پایه: "
                        android:textColor="@color/colorTextPrimary" />

                    <TextView
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:id="@+id/txt_base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:text="پروتیین شیر"
                        android:textColor="@color/colorTextMuted" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>