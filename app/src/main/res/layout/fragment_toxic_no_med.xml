<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.toxic.ToxicNoMedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_margin="@dimen/margin_header"
            android:id="@+id/btn_back"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoMirrored="true"
                    app:tint="@color/button_outlined_border"
                    android:src="@drawable/ic_arrow_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/header_size"
                    android:text="@string/toxic_no_med" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/main_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_drug"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="@color/surface_bg_medium"
                    android:elevation="2dp"
                    android:text="@string/drug_active"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/button_outlined_border"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_chemo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="18dp"
                    android:visibility="gone"
                    android:text="@string/chemo_tox"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/button_outlined_border"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_plants"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="@color/surface_bg_medium"
                    android:elevation="2dp"
                    android:text="@string/plants_tox"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/button_outlined_border"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_snake"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="18dp"
                    android:backgroundTint="@color/surface_bg_medium"
                    android:elevation="2dp"
                    android:text="@string/snake_bee"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:cornerRadius="8dp"
                    app:strokeColor="@color/button_outlined_border"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>