<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:layout_margin="@dimen/main_margin"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_header_corrected"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:id="@+id/btn_back"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/button_outlined_border"
                    android:autoMirrored="true"
                    android:src="@drawable/ic_arrow_left" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/header_size"
                    android:text="@string/account" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.Material3.Button"
            android:id="@+id/btn_my_detail"
            app:backgroundTint="@color/colorPrimary"
            app:strokeColor="@color/colorPrimary"
            android:text="@string/my_detail"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            app:cornerRadius="@dimen/corner_main" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.Material3.Button"
            android:id="@+id/btn_kids"
            android:text="@string/my_kids"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            app:backgroundTint="@color/colorPrimary"
            app:strokeColor="@color/colorPrimary"
            app:cornerRadius="@dimen/corner_main" />

        <com.google.android.material.button.MaterialButton
            app:strokeWidth="2dp"
            android:id="@+id/btn_add_kid"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.Material3.Button"
            android:text="@string/add_kid"
            android:textSize="16sp"
            android:layout_marginTop="18dp"
            app:backgroundTint="@color/colorPrimary"
            app:strokeColor="@color/colorPrimary"
            app:cornerRadius="@dimen/corner_main"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.Material3.Button"
            android:id="@+id/btn_rules"
            android:text="@string/rules_2"
            android:textSize="16sp"
            app:backgroundTint="@color/colorPrimary"
            app:strokeColor="@color/colorPrimary"
            android:layout_marginTop="18dp"
            app:cornerRadius="@dimen/corner_main" />
    </LinearLayout>
</FrameLayout>
