<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layoutDirection="locale"
        app:strokeColor="@color/gray"
        app:strokeWidth="1dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/surface_bg_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/surface_text_light"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="@string/age"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginEnd="4dp"
                        android:text=""
                        android:id="@+id/txt_age"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:textColor="@color/surface_text_light"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="@string/months"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:text="@string/normal_height"
                        android:layout_marginStart="18dp"
                        android:textColor="@color/surface_text_light"
                        android:textSize="16sp"
                        android:id="@+id/txt_month"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/height_start"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/to"
                        android:gravity="center"
                        android:textColor="@color/surface_text_light"
                        android:textSize="16sp"
                        android:textAlignment="center"/>


                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/height_end"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:text="@string/normal_weight"
                        android:layout_marginStart="18dp"
                        android:textColor="@color/surface_text_light"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/weight_start"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/to"
                        android:gravity="center"
                        android:textColor="@color/surface_text_light"
                        android:textSize="16sp"
                        android:textAlignment="center"/>


                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/weight_end"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    tools:ignore="NestedWeights">


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:text="@string/normal_head"
                        android:layout_marginStart="18dp"
                        android:textColor="@color/surface_text_light"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/head_start"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/to"
                        android:gravity="center"
                        android:textColor="@color/surface_text_light"
                        android:textSize="16sp"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/head_end"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>