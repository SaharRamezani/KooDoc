<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calculator_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_medium"
        android:orientation="vertical"
        android:layout_margin="@dimen/main_margin"
        android:layoutDirection="rtl">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="@dimen/margin_header_corrected"
            android:id="@+id/btn_back"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:text="@string/main_calculator"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="@dimen/header_size" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Calculator content below -->
        <FrameLayout
            android:id="@+id/calculator_content_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <!-- START: NEW UI -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="top">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_read_before_use"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/spacing_medium"
                        android:clickable="true"
                        android:minHeight="50dp"
                        android:backgroundTint="@color/surface_bg_medium"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:id="@+id/ll_read_before_use_header"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/read_before_use"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/iv_read_before_use_arrow"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_arrow_down"
                                android:tintMode="src_in"
                                app:tint="@color/menu_button_icon_default" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Collapsible content (hidden by default) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_read_before_use_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/spacing_medium"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/surface_bg_medium"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_medium">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/calculator_description"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/not_substitute_warning"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/fever_warning"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/below_5kg_warning"
                                android:textColor="@color/colorTextPrimary"
                                android:textSize="16sp"
                                android:layout_marginBottom="8dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Drug selector -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/choose_drug_name"
                        android:layout_marginBottom="16dp">

                        <AutoCompleteTextView
                            android:id="@+id/auto_complete_drug"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Weight input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/kid_weight"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Age input -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_age">

                        <!-- Age + Unit row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/spacing_medium">

                            <!-- 1) Unit dropdown: wrap_content + a minEms so it auto-sizes to its text -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="@string/unit">

                                <AutoCompleteTextView
                                    android:id="@+id/auto_complete_age_unit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:singleLine="true"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:ems="5"
                                android:dropDownWidth="wrap_content"
                                android:textDirection="ltr"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- 2) Age value: fill the rest -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_small"
                                android:layout_weight="1"
                                android:hint="@string/enter_age">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/input_age"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number"
                                    android:textDirection="ltr"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Reminder text -->
                    <TextView
                        android:id="@+id/tv_warning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/warning_enter_weight_instead"
                        android:textColor="@color/colorTextMuted"
                        android:textSize="14sp"
                        android:layout_marginBottom="24dp" />

                    <!-- Calculate button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_calculate"
                        style="@style/Widget.MyApp.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:text="@string/but_calculator"
                        android:textSize="18sp" />

                </LinearLayout>
                <!-- END: NEW UI -->
            </ScrollView>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>